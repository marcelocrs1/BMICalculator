<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:textColor="@color/purple_700"
        android:layout_marginTop="16dp"
        android:text="Your BMI is: "
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hello World"
        android:textAlignment="center"
        android:textSize="38sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textview_classification"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Classification: Underweight"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_margin="16dp"
        android:text="SEE TABLE BELOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:text="Below 18.5 Underweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:text="Between 18.5 and 24.9 Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:text="Between 25.0 and 29.9 Overweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:text="Between 30.0 and 39.9 Obesity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:text="Over 40.0 Severe Obesity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>